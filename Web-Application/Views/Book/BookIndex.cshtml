@model IEnumerable<BookInfoDTO>

	<h2 class="mt-3">All books</h2>
	<table class ="table table-hover table-bordered">
		<thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    
                </th>
            </tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Title)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Author)
					</td>
					
                    <td class="text-center">
                        <div class="btn-group" role="group" aria-label="Action buttons">
                            <a asp-action="BookDetails" class="btn btn-outline-success btn-sm me-2" asp-route-id="@item.ID">
                                <i class="fa fa-info-circle"></i> More Info
                            </a>

                            <a asp-action="UpdateBook" class="btn btn-outline-warning btn-sm me-2" asp-route-id="@item.ID">
                                <i class="fa fa-edit"></i> Edit
                            </a>

                            <a asp-action="DeleteBook" class="btn btn-outline-danger btn-sm" asp-route-id="@item.ID">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
					
				</tr>
			}
		</tbody>
	</table>
    <p>
        <a asp-action="CreateBook" class="btn btn-outline-primary">
            <i class="fa-solid fa-plus me-2"></i> Add new book
        </a>
    </p>
    <div class="mt-4 text-center">
        <a asp-action="Start" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Return Home
        </a>
    </div>