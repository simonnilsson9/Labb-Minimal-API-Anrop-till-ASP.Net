@model IEnumerable<BookInfoDTO>

<form class="d-flex mt-5" role="search" asp-controller="Book" asp-action="BooksByGenre" method="get">
    <input class="form-control me-2" type="search" name="genre" placeholder="Search for a genre" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>


@if (ViewBag.ShowResults == true)
{
    <h2 class="mt-3">Books in Genre: @Html.ViewBag.genre</h2>
    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    More Info
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td class="text-center">
                        <a asp-action="BookDetails" class="btn btn-outline-success btn-sm" asp-route-id="@item.ID">
                            <i class="fa fa-info-circle me-1"></i> More Info
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
<div class="mt-4 text-center">
    <a asp-action="Start" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left"></i> Return Home
    </a>
</div>
