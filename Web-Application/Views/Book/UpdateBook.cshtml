@model BookInfoDTO

<div class="container mt-5">
    <h2 class="mb-4 text-center">Update Book</h2>
    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="UpdateBook">
                <input asp-for="ID" type="hidden" />
                <div class="border rounded p-4 shadow-sm bg-light">
                    <h3 class="mb-4 text-center">Book Details</h3>

                    <!-- Title Input -->
                    <div class="input-group mb-4">
                        <span class="input-group-text rounded-start">Title</span>
                        <input asp-for="Title" class="form-control rounded-end" placeholder="Title" aria-label="Title" />
                        <span asp-validation-for="Title" class="text-danger ms-2"></span>
                    </div>

                    <!-- Author Input -->
                    <div class="input-group mb-4">
                        <span class="input-group-text rounded-start">Author</span>
                        <input asp-for="Author" class="form-control rounded-end" placeholder="Author" aria-label="Author" />
                        <span asp-validation-for="Author" class="text-danger ms-2"></span>
                    </div>

                    <!-- Publication Year Input -->
                    <div class="input-group mb-4">
                        <span class="input-group-text rounded-start">Year</span>
                        <input asp-for="PublicationYear" class="form-control rounded-end" placeholder="Publication Year" aria-label="Year" />
                        <span asp-validation-for="PublicationYear" class="text-danger ms-2"></span>
                    </div>

                    <!-- Genre Input -->
                    <div class="input-group mb-4">
                        <span class="input-group-text rounded-start">Genre</span>
                        <input asp-for="Genre" class="form-control rounded-end" placeholder="Genre" aria-label="Genre" />
                        <span asp-validation-for="Genre" class="text-danger ms-2"></span>
                    </div>

                    <!-- Description Input -->
                    <div class="input-group mb-4">
                        <span class="input-group-text rounded-start">About</span>
                        <input asp-for="Description" class="form-control rounded-end" placeholder="Description" aria-label="Description" />
                        <span asp-validation-for="Description" class="text-danger ms-2"></span>
                    </div>

                    <!-- Available Checkbox -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="IsAvailable" />
                        <label class="form-check-label" for="IsAvailable">Available for rent</label>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-flex justify-content-center mb-4">
                        <input type="submit" value="Save" class="btn btn-primary me-2" />
                        <a asp-action="Start" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Return Home
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
